@using WebHotel.Help
@model IEnumerable<WebHotel.Models.Room>
<table class="table align-items-center mb-0">
    <thead>
        <tr>
            <th>
                STT
            </th>
            <th>
                Tên phòng
            </th>
            <th>
                Giá tiền
            </th>
            <th>
                Hình ảnh
            </th>

            <th>
                Vị trí
            </th>
            <th>
                Ngày thêm
            </th>
            <th>
                Loại phòng
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{var Number = 1; }
        @foreach (var item in Model)
        {

            <tr>
                <td style="text-align:center">
                    @Html.Raw(Number++)
                </td>
                <td>
                    <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                                @Html.DisplayFor(modelItem => item.name)
                            </h6>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                                @String.Format("{0:#,##0} đ", item.price)
                            </h6>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                                <img src="~/Upload/img/@Html.DisplayFor(modelItem => item.img)" style="width:100px" />
                            </h6>
                        </div>
                    </div>
                </td>

                <td>
                    <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                                @Html.DisplayFor(modelItem => item.order)
                            </h6>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                                @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                            </h6>
                        </div>
                    </div>
                </td>
                <td>
                    <div class="d-flex px-2 py-1">
                        <div class="d-flex flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">
                                @Html.DisplayFor(modelItem => item.Caterogy.name)
                            </h6>
                        </div>
                    </div>
                </td>

                <td class="align-middle">
                    <a href="@Url.Action("Edit", "Rooms", new { id = item.id })" class="btn">
                        <i class="fab fas fa-pen fa-fw"></i>
                    </a>
                    <a href="@Url.Action("Details", "Rooms", new { id = item.id })" class="btn btn-primary">
                        <i class="fab 	fas fa-search fa-fw"></i>
                    </a>
                    <a href="@Url.Action("Delete", "Rooms", new { id = item.id })" class="btn btn-danger">
                        <i class="fab 	fas fa-trash-alt fa-fw"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
</script>