@model WebHotel.Models.Booking
@{
    ViewBag.Title = "Index";
Layout = "~/Views/Shared/Mylayout.cshtml";
}
@{Html.RenderAction("getBannerSmall", "Default");}
<div style="margin-left:20%">
    <h3>Đặt vé thành công vui lòng chụp lại vé để check In</h3>
    <div class="booking-info">
        <div class="booking-icon"><i class="fas fa-ticket-alt"></i><h5 style="color:gold">@String.Format("{0:#,##0} đ", Model.price)</h5></div>
        <div class="booking-details" style="margin-left:5%">
            <h3>Thông tin đặt vé của bạn</h3>
            <div style="float:left">
                <p><i class="fas fa-user"></i> Họ tên: @Model.namecustomer</p>
                <p><i class="fas fa-id-card"></i> CMND/CCCD: @Model.customerID</p>
                <p><i class="fas fa-phone"></i> Số điện thoại: @Model.phone</p>
                <p><i class="fas fa-envelope"></i> Email: @Model.email</p>
                <p><i class="fas fa-calendar-alt"></i> Ngày đặt vé: @(Model.datebegin.HasValue ? Model.datebegin.Value.ToString("dd/MM/yyyy") : "")</p>
            </div>
            <div style="float:left; margin-left:100px">
                <p><i class="fas fa-door-open"></i> Tên Phòng: @Model.nameRoom</p>
                <p><i class="fas fa-id-badge"></i> Số Phòng: @Model.idRoom</p>
                <p><i class="fas fa-calendar-alt"></i> Ngày Check In: @(Model.checkin.HasValue ? Model.checkin.Value.ToString("dd/MM/yyyy") : "")</p>
                <p><i class="fas fa-calendar-alt"></i> Ngày Check Out:  @(Model.checkout.HasValue ? Model.checkout.Value.ToString("dd/MM/yyyy") : "")</p>
                <p><i class="fas fa-map-marker-alt"></i> Địa điểm: ĐỨC HOTELIER 19 Nguyễn Hữu Thọ</p>
            </div>
        </div>
    </div>
    <h5>Tính năng thanh toán đang được triển khai vui lòng thanh toán khi check in!</h5>
</div>

<style>
    .booking-info {
        display: flex;
        align-items: center;
        padding: 20px;
        border: 1px solid blue;
        border-radius: 5px;
        margin-bottom: 20px;
        background-color: white;
        width: 1000px;
        margin-left: -50px;
    }

    .booking-icon {
        font-size: 40px;
        color: #337ab7;
        margin-right: 20px;
    }

    .booking-details {
        font-size: 18px;
    }

        .booking-details h3 {
            margin-bottom: 10px;
        }

        .booking-details p {
            margin-bottom: 5px;
            line-height: 1.5;
        }

        .booking-details i {
            margin-right: 5px;
            color: #337ab7;
        }

    .booking-icon {
        margin-bottom: 20px;
    }
</style>
