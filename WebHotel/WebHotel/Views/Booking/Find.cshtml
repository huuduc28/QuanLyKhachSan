@model WebHotel.Models.Booking

@{
    ViewBag.Title = "Find";
    Layout = "~/Views/Shared/Mylayout.cshtml";
}
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-12">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" action="@Url.Action("FindBooking","Booking")">
                        <div class="row g-3">
                            <div class="col-md-9">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="num" name="num" placeholder="Your CMND/CCCD<">
                                    <label for="num">Nhập SDT hoặc CMND/CCCD</label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-primary w-100 py-3" type="submit">Tìm kiếm</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>