@model IEnumerable<WebHotel.Models.News>

@foreach (var i in Model)
{
    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.2s">
        <a href="/Tintuc/@i.meta/@i.id">
            <div class="room-item shadow rounded overflow-hidden" style="height:400px">
                <div class="position-relative">
                    <img class="img-fluid" src="~/Upload/img/@i.img" alt="" style="width:500px; height: 250px">

                </div>
                
                <div class="p-4 mt-2">
                    <h5 class="mb-0">@i.name</h5>
                    <div class="d-flex justify-content-between mb-3" style="height:50px">
                        <a>@i.description</a>
                    </div>
                    <div class="d-flex justify-content-between" style="margin-left: 190px">
                        <a>Ngày đăng:@(i.datebegin.HasValue ? i.datebegin.Value.ToString("dd/MM/yyyy") : "")</a>
                    </div>
                </div>
            </div>
        </a>
    </div>
}
